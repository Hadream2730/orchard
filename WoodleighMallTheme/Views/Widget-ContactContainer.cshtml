@using OrchardCore.Entities
@using OrchardCore.ContentManagement
@using OrchardCore.DisplayManagement
@using OrchardCore.DisplayManagement.Shapes
@using OrchardCore.Flows.Models

@inject OrchardCore.ContentManagement.Display.IContentItemDisplayManager ContentItemDisplayManager

@{
    var widget = (ContentItem)Model.ContentItem;
    var flowMetadata = widget.As<FlowMetadata>();
    var title = widget.DisplayText;
}
<!-- Page Banner -->
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<div class="page-banner page-banner--fullscreen overflow-hidden">
    <img class="w-100 h-100 object-fit-cover" src="content/images/contact-banner-bg.jpg" alt="Contact Banner" />
</div>
<!-- Page Banner -->
<!-- Contact -->
<div class="contact-section section-bg pb-4 pb-md-5 position-relative">
    <img class="position-absolute start-0 bottom-0 contact-section__img"
         src="content/images/contact-section-bg-icon.png" alt="Image" />
    <div class="container mb-lg-5 pb-lg-5">
        <div class="row justify-content-end">
            <div class="col-lg-8">

                <!-- Card -->
                <div class="contact-section__card bg-white p-3 p-md-5 shadow-sm position-relative z-1">
                    <p class="fs-13px-sm">
                        Our Information Counter is located at Level 2 and open from 10am to
                        10pm daily.
                        <br>
                        Contact Number: 6320 0129
                    </p>

                    <h3 class="text-secondary text-uppercase my-3 mb-md-4 mt-md-5 font2">Get in Touch</h3>
                    @await DisplayAsync(Model.Content.SubHeading)
                    @await DisplayAsync(Model.Content.FlowPart)
                </div>
                <!-- Card -->

            </div>
        </div>
    </div>
</div>
<!-- Contact -->
